<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucky.keshe.activity.LoginActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="70dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_person_white_24dp"
            android:layout_below="@id/imageView"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:paddingRight="15dp"
            android:paddingLeft="65dp"
            android:hint="职工号"
            android:background="#29ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/edit_username_login"/>

        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#dadada"
            android:id="@+id/hint"
            android:layout_below="@id/edit_username_login"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_width="55dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_vpn_key_white_24dp"
            android:layout_below="@id/hint"
            android:layout_marginLeft="22dp"/>
        <EditText

            android:layout_marginRight="20dp"
            android:id="@+id/edit_password_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignStart="@+id/edit_username_login"
            android:layout_below="@+id/hint"
            android:background="#29ffffff"
            android:hint="密    码"
            android:inputType="textPassword"
            android:paddingLeft="65dp"
            android:paddingRight="15dp" />
        <Button
            android:id="@+id/login"
            android:textSize="22sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:text="登    录"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/edit_password_login"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp"/>

        <TextView
            android:id="@+id/forget_login_text"
            android:textColor="#ffff"
            android:text="忘记密码？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/login"
            android:layout_marginStart="13dp"/>
        <TextView
            android:textColor="#ffff"
            android:text="注册账号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_btn_text"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/login"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/login"/>
        <TextView
            android:layout_marginBottom="35dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"

            android:textColor="#ffffff"
            android:text="登录即同意用户协议"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lucky.keshe.activity.RegisterActivity">
    <RelativeLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/back_register_image"
            android:padding="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/username_register"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_arrow_back_white_24dp"/>
        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo"
            android:layout_width="80dp"
            android:layout_height="70dp" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person_white_24dp"
            android:layout_marginTop="155dp"/>
        <EditText
            android:id="@+id/username_register"
            android:paddingLeft="50dp"
            android:paddingRight="15dp"
            android:hint="职工号"
            android:background="#29ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:layout_marginTop="150dp"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/hint1"
            android:layout_below="@+id/username_register"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_vpn_key_white_24dp"
            android:layout_below="@id/hint1"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>
        <EditText
            android:id="@+id/password_register"
            android:inputType="textPassword"
            android:paddingLeft="50dp"
            android:paddingRight="15dp"
            android:hint="密    码"
            android:background="#29ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/hint1"
            />
        <TextView
            android:id="@+id/hint2"
            android:layout_below="@+id/password_register"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_vpn_key_white_24dp"
            android:layout_below="@id/hint2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"/>

        <EditText
            android:id="@+id/phone_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#29ffffff"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hint2"
            android:hint="确认密码"
            android:inputType="textPassword"
            android:paddingLeft="50dp"
            android:paddingRight="15dp" />
        <TextView
            android:id="@+id/hint3"
            android:layout_below="@+id/phone_register"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_perm_identity_white_24dp"
            android:layout_below="@id/hint3"
            android:layout_marginTop="5dp"/>
        <Spinner
            android:id="@+id/identify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#29ffffff"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hint3"
            android:hint="管理员/用户"
            android:paddingLeft="50dp"
            android:paddingRight="15dp" />


        <Button
            android:textSize="20sp"
            android:id="@+id/register_btn"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="注    册"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="100dp"
            android:layout_below="@+id/identify" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
